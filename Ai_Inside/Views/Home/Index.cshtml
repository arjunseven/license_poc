@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h3>Get started by purchasing a license.</h3>

    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-controller="License" asp-action="ChoosePlan" class="btn btn-primary">Purchase License</a>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            You must be <strong>logged in</strong> to purchase a license.
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-link">Register here</a>
            or
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-link">Login</a>.
        </div>
    }
</div>