@{
    ViewData["Title"] = "Choose a License Plan";
}

<div class="container text-center mt-5">
    <h2>Choose a License Plan</h2>
    <p>Select the best plan for you:</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Standard Plan</h5>
                    <p class="card-text">$1000 per year</p>

                    <form asp-controller="License" asp-action="Purchase" method="get">
                        <input type="hidden" name="plan" value="Standard">
                        <label for="years" class="form-label">Select Years:</label>
                        <div class="input-group">
                            <select name="years" id="years" class="form-select">
                                <option value="1">1 Year</option>
                                <option value="2">2 Years</option>
                                <option value="3">3 Years</option>
                                <option value="5">5 Years</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success mt-2 w-100">Buy Now</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Premium Plan</h5>
                    <p class="card-text">$2500 per year</p>

                    <form asp-controller="License" asp-action="Purchase" method="get">
                        <input type="hidden" name="plan" value="Premium">
                        <label for="years" class="form-label">Select Years:</label>
                        <div class="input-group">
                            <select name="years" id="years" class="form-select">
                                <option value="1">1 Year</option>
                                <option value="2">2 Years</option>
                                <option value="3">3 Years</option>
                                <option value="5">5 Years</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success mt-2 w-100">Buy Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
